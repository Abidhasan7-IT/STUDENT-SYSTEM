@model StudentManagementSystem.student_regform

@{
    ViewBag.Title = "Edit";
}

<style>
    input[type=button], input[type=submit], input[type=reset] {
        background-color: #04AA6D;
        border: none;
        color: white;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>



